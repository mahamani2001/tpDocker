pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building project...'
                // Exemple de commande pour construire une image Docker
                sh 'docker build -t myapp .'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                // Exemple de test
                sh 'echo "Tests passed!"'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                // Exemple de d√©ploiement Docker
                sh 'docker run -d -p 8080:8080 myapp'
            }
        }
    }

    post {
        always {
            echo 'Cleaning up Docker artifacts...'
            // Supprime les conteneurs et images temporaires
            sh '''
            docker container prune -f
            docker image prune -f
            '''
        }
    }
}
